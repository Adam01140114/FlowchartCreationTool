rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to the forms collection (for available forms)
    match /forms/{formId} {
      allow read: if true; // Public read access for available forms
      allow write: if false; // Only allow writes through Admin Console or server
    }
    
    // Allow authenticated users to read and write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to user's forms subcollection
      match /forms/{formId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow access to user's documents subcollection
      match /documents/{documentId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow access to user's formAnswers subcollection
      match /formAnswers/{answerId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow authenticated users to read and write their own user settings
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write their own flowcharts
    match /flowcharts/{flowchartId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // Allow public read access to shared flowcharts (if they have a public flag)
    match /sharedFlowcharts/{flowchartId} {
      allow read: if resource.data.public == true;
      allow write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
